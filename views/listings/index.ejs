<% layout("/layouts/boilerplate") %> 
<body>
    

    <h1>All Listings</h1>
    <!--<form action="/listings/new" method="GET">
        <button>Create New List</button>
    </form>-->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id%>" class="listing-link">
                <div class="card col listing-card" >
                    <img src="<%= listing.image.url %>" class="card-img-top" style="width: 20rem" alt="listing_image"/>
                    <div class="card-img-overlay">jitu</div>
                    <div class="card-body">
                     <p class="card-text">
  <b><%= listing.title ? listing.title : "No title available" %></b><br>
  &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
</p>
                    </div>
                  </div>
                  <% } %>
            </a>
            </div>
            </body>

    